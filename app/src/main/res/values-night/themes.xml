<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.Pursue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color from UI spec -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color from UI spec -->
        <item name="colorSecondary">#F9A825</item>
        <item name="colorSecondaryVariant">#F57F17</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Surface colors from UI spec -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>